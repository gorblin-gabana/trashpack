{
  "manifest_version": 3,
  "name": "TrashPack - Wallet Extension",
  "version": "1.6.0",
  "description": "TrashPack - A Secure Solana wallet Chrome extension for managing cryptocurrency",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "background",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://rpc.gorbchain.xyz/*",
    "https://api.devnet.solana.com/*",
    "https://devnet.gorbchain.xyz/*",
    "https://mainnet.helius-rpc.com/*",
    "https://solana-mainnet.g.alchemy.com/*"
  ],
  "optional_host_permissions": [
    "http://localhost:5173/*",
    "http://localhost:3000/*",
    "http://127.0.0.1/*",
    "http://[::1]/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrashPack Wallet",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "exclude_globs": ["*chrome-extension*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; object-src 'self'; img-src 'self' https: data:; connect-src 'self' https:;"
  }
}
